<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FGraph">


    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        app:contentPadding="20dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView android:layout_width="match_parent"
                android:text="Graph"
                android:textSize="28dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aa_chart_view"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="200dp">
            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
            <Space android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan Nama Siswa"
                android:id="@+id/matpel"
                android:textSize="28dp"
                android:textAlignment="center"/>
            <Space android:layout_width="match_parent" android:layout_height="10dp"/>

            <EditText android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/inputnilai"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:text="Input"
                android:layout_height="50dp"
                android:id="@+id/masukan"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>